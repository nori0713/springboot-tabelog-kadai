spring.application.name=nagoyameshi

# データソース設定
spring.datasource.url=jdbc:mysql://${MYSQL_HOST:localhost}:3306/nagoyameshi_db
spring.datasource.username=root
spring.datasource.password=my password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# SQL初期化設定（alwaysとnever切り替え可）
spring.sql.init.encoding=UTF-8
spring.sql.init.mode=always

# H2コンソールの有効化 (開発環境専用)
spring.h2.console.enabled=true

# 静的リソースの設定
spring.resources.static-locations=classpath:/static/

# ファイルアップロードの設定
spring.servlet.multipart.max-file-size=5MB

# GmailのSMTPサーバー設定
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=my mail address
spring.mail.password=oesu rdbf cyyl mmeq
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.properties.mail.smtp.ssl.trust=smtp.gmail.com
spring.mail.properties.mail.smtp.starttls.required=true
spring.mail.properties.mail.debug=true
spring.mail.default-encoding=UTF-8
spring.mail.from=my mail address

# Stripe APIキー設定
stripe.api.key=API key
stripe.price.id=price_ID